{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@hooks/*": ["./hooks/*"],
      "@screens/*": ["./screens/*"],
      "@queries/*": ["./queries/*"],
      "@helpers/*": ["./helpers/*"],
      "@colors": ["./constants/Colors.ts"],
    }
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
